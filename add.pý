 # func to log scraping details(link of the grp to scrape
 # and current index) in order to resume later
 def log_status(scraped, index):
    with open('status.dat', 'wb') as f:
        pickle.dump([scraped, int(index)], f)
        f.close()
    print(f'{info}{lg} ðŸ˜Ž I Have Stored Those Sessions in  {w}status.dat{lg}')
    

 def exit_window():
    input(f'\n{cy} Press enter to exit..âœ…')
    clr()
    banner()
    sys.exit()

 # read user details
 try:
    # rquest to resume adding
    with open('status.dat', 'rb') as f:
        status = pickle.load(f)
        f.close()
        lol = input(f'{INPUT}{cy} Resume Adding Members From ðŸ‘‰ {w}{status[0]}{lg}? [y/n]: {r}')
